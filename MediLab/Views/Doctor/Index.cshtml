<style>
    .hospital-navbar {
        background-color: #f1f1f1;
        padding: 10px;
    }

        .hospital-navbar ul {
            list-style-type: none;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: space-between;
        }

        .hospital-navbar li {
            display: inline;
        }

        .hospital-navbar a {
            text-decoration: none;
            color: #333;
        }

            .hospital-navbar a:hover {
                color: #666;
            }


    .doctor-card {
        width: 300px;
        border: 1px solid #ccc;
        border-radius: 5px;
        padding: 10px;
        text-align: center;
    }

        .doctor-card img {
            width: 150px;
            height: 150px;
            border-radius: 50%;
            object-fit: cover;
            margin: 0 auto 10px;
        }

        .doctor-card h3 {
            font-size: 20px;
            margin-bottom: 5px;
        }

        .doctor-card p {
            font-size: 14px;
            margin-bottom: 5px;
        }

</style>

<div class="container">

    <div class="row">
        @foreach (var services in Model.Services)
        {
            <nav class="hospital-navbar">

        <ul>

        <li><a asp-action="Index" asp-controller="Doctor" data-filter="@services.Name.Trim().ToLower()">@services.Name</a></li>

        </ul>


        </nav>


            



            <div class="container">
                <div class="row">
                    @foreach (Doctor doctor in services.Doctors)
                    {
                        <div class="col-sm">
                            <div class="doctor-card">
                                <img src="~/cdn.doctortap.az//uploads/doctor/@doctor.ImagePath" alt="Doktorun İsmi">
                                <h3>@doctor.FullName</h3>

                                <p>İş təcrübəsi:@doctor.WorkExperience il</p>
                                <p>İxtisası:@doctor.TypeOfService.Name</p>
                                <p>İşlədiyi Klinika:@doctor.Clinic.Name</p>
                                <a type="button" asp-action="Index" asp-controller="AboutDoctor" asp-route-id="@doctor.Id" class="btn btn-info">Ətraflı məlumat</a>
                            </div>
                        </div>
                    }
                </div>
            </div>
        }
    </div>
</div>


